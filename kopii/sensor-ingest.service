[Unit]
Description=Sensor Ingest FastAPI (no passwords, local peer auth)
After=network.target postgresql.service

[Service]
User=postgres
WorkingDirectory=/opt/emotion_ingest
Environment=PYTHONUNBUFFERED=1
# DATABASE_URL не задаём — app.py по умолчанию "postgresql:///sensordb"
ExecStart=/opt/emotion_ingest/.venv/bin/uvicorn app:app --host 127.0.0.1 --port 8080 --workers 2
Restart=always
RestartSec=2

[Install]
WantedBy=multi-user.target
